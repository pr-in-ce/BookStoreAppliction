@{
    ViewData["Title"] = "All books";
}
@model IEnumerable<BookModel>

<div class="container">
    <h3 class="display-4">Alll books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="https://www.w3.org/2000/"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="bookDetailRoute" asp-route-id="@book.Id"
                                   class="btn btn-sm btn-outline-secondary">view details</a>
                            </div>
                            <small class="text-muted">Author Name</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>